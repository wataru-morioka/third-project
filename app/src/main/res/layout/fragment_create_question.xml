<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.CreateQuestion" android:id="@+id/create_question">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#35383A">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    android:id="@+id/parent_linear_layout">
                <TextView
                        android:text="Question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp" android:textColor="#F1810E"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:inputType="textMultiLine"
                            android:gravity="start|top"
                            android:ems="10"
                            android:id="@+id/question_tv" android:layout_weight="2" android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp" android:textSize="12sp" android:textColor="#E4E4E4"
                            android:maxLength="2000"/>
                    <Button
                            android:text="確定"
                            android:background="@drawable/confirm_button_style"
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" android:id="@+id/question_confirm_bt"
                            android:layout_weight="1"
                            android:textSize="12sp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                    />
                </LinearLayout>
                <TextView
                        android:text="Answer①"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" android:textColor="#F1810E"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:inputType="textMultiLine"
                            android:gravity="start|top"
                            android:ems="10"
                            android:id="@+id/answer1_tv" android:layout_weight="2" android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp" android:textSize="12sp" android:textColor="#F2F2F2"
                            android:maxLength="1000"/>
                    <Button
                            android:text="確定"
                            android:background="@drawable/confirm_button_style"
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" android:id="@+id/answer1_confirm_bt"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="12dp"/>
                </LinearLayout>
                <TextView
                        android:text="Answer②"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" android:textColor="#F1810E"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:inputType="textMultiLine"
                            android:gravity="start|top"
                            android:ems="10"
                            android:id="@+id/answer2_tv" android:layout_weight="2" android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp" android:textSize="12sp" android:textColor="#F2F2F2"
                            android:maxLength="1000"/>
                    <Button
                            android:text="確定"
                            android:background="@drawable/confirm_button_style"
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" android:id="@+id/answer2_confirm_bt"
                            android:layout_weight="1"
                            android:textSize="12dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
                </LinearLayout>
                <TextView
                        android:text="対象人数"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" android:textColor="#F1810E"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="34dp" android:id="@+id/target_spinner" android:layout_weight="2"
                            android:layout_marginLeft="10dp" android:layout_marginTop="2dp"/>
                    <TextView
                            android:text="人"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content" android:id="@+id/textView23"
                            android:layout_weight="1" android:textColor="#F1810E"/>
                    <Button
                            android:text="確定"
                            android:layout_width="5dp"
                            android:background="@drawable/confirm_button_style"
                            android:layout_height="wrap_content" android:id="@+id/target_confirm_bt"
                            android:layout_weight="1"
                            android:textSize="12dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    />
                </LinearLayout>
                <Button
                        android:text="送信"
                        android:background="@drawable/submit_button_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/ask_bt"
                        android:textSize="12dp" android:layout_gravity="center" android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>