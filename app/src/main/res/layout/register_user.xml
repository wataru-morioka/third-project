<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/constraintLayout2">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#35383A" app:layout_constraintVertical_bias="0.0">
        <TextView
                android:text="アイコン選択"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/choose_icon"
                android:textSize="12sp"
                android:textColor="#F1810E" android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registration_id"
                app:layout_constraintBottom_toTopOf="@+id/register_bt"/>
        <Button
                android:text="@string/register_bt"
                android:background="@drawable/submit_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/register_bt"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="248dp"
                app:layout_constraintTop_toBottomOf="@+id/registration_id" android:textSize="18sp"
                android:textColor="#F2F2F2"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="20文字以内"
                android:ems="12"
                android:id="@+id/registration_id"
                android:textSize="14sp" android:maxLength="20"
                android:textColorHint="#1F7CE4" android:textColor="#F2F2F2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintBottom_toTopOf="@+id/choose_icon" app:layout_constraintVertical_bias="0.659"
                android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.5"/>
        <TextView
                android:text="@string/registration_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="18sp" android:textColor="#F1810E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/registration_id"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>